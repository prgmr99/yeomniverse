# ===========================================
# FinBrief Environment Variables
# ===========================================

# Supabase Configuration
# Get from: https://supabase.com/dashboard/project/YOUR_PROJECT/settings/api
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Resend Email Configuration
# Get from: https://resend.com/api-keys
RESEND_API_KEY=re_xxxxxxxxxxxxx
RESEND_FROM_EMAIL=FinBrief <noreply@your-domain.com>

# ===========================================
# Lemon Squeezy Payment Configuration
# ===========================================
# Get from: https://app.lemonsqueezy.com/settings/api

# API Key - Settings > API > Create new API key
LEMONSQUEEZY_API_KEY=your_lemonsqueezy_api_key

# Store ID - Found in your store URL: https://app.lemonsqueezy.com/stores/YOUR_STORE_ID
LEMONSQUEEZY_STORE_ID=your_store_id

# Also used as (legacy naming - keep both):
LEMON_SQUEEZY_STORE_ID=your_store_id

# Variant IDs - Products > Your Product > Variants
# Each variant has an ID in the URL when editing
LEMON_SQUEEZY_BASIC_VARIANT_ID=your_basic_variant_id
LEMON_SQUEEZY_PRO_VARIANT_ID=your_pro_variant_id

# Webhook Secret - Settings > Webhooks > Create webhook
# Set webhook URL to: https://your-domain.com/api/webhooks/lemon-squeezy
# Enable events: subscription_created, subscription_updated, subscription_cancelled, subscription_payment_failed
LEMON_SQUEEZY_WEBHOOK_SECRET=your_webhook_signing_secret

# ===========================================
# Optional: OpenAI Configuration (for AI analysis)
# ===========================================
OPENAI_API_KEY=your_openai_api_key

# ===========================================
# Optional: Premium Feature Settings
# ===========================================
MAX_DAILY_FEEDBACKS_PREMIUM=10
MAX_DAILY_FEEDBACKS_FREE=0
