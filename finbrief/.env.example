# Gemini API Key (https://makersuite.google.com/app/apikey)
GEMINI_API_KEY=your_api_key_here

# Telegram Bot Token (from @BotFather)
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Telegram Chat ID (your channel or chat ID)
TELEGRAM_CHAT_ID=your_chat_id_here

# === Blog Publishing Configuration ===

# Blog Scheduler
ENABLE_SCHEDULER=false
BLOG_PUBLISH_TIME=0 8 * * *
RUN_ONCE=false

# Tistory Configuration (https://www.tistory.com/guide/api/manage/register)
ENABLE_TISTORY=false
TISTORY_CLIENT_ID=your_client_id_here
TISTORY_CLIENT_SECRET=your_client_secret_here
TISTORY_BLOG_NAME=your_blog_name
TISTORY_ACCESS_TOKEN=your_access_token_here

# Velog Configuration
ENABLE_VELOG=false
VELOG_ACCESS_TOKEN=your_velog_token_here
VELOG_USERNAME=your_username

# Site Configuration
SITE_URL=https://finbrief.io
TELEGRAM_LINK=https://t.me/finbrief_bot
